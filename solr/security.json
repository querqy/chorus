{
  "authentication": {
    "class": "solr.JWTAuthPlugin",
    "realm": "solr",
    "blockUnknown": false,
    "requireIss": true,
    "requireExp": true,
    "principalClaim": "sub",
    "adminUiScope": "solr:admin",
    "scope": "solr:read solr:write solr:admin",
    "algWhitelist": ["RS256", "RS384", "RS512"],
    "issuers": [
      {
        "name": "keycloak",
        "jwksUrl": "http://keycloak:9080/auth/realms/solr/protocol/openid-connect/certs",
        "authorizationEndpoint": "http://keycloak:9080/auth/realms/solr/protocol/openid-connect/auth",
        "clientId": "myclient",
        "iss": "http://keycloak:9080/auth/realms/solr"
      }
    ]
  },
  "authorization": {
    "class": "solr.ExternalRoleRuleBasedAuthorizationPlugin",
    "permissions": [
      {
      "name": "security-read", "role": "solr:admin",
      "name": "security-edit", "role": "solr:admin",
      "name": "schema-read", "role": "solr:admin",
      "name": "schema-edit", "role": "solr:admin",
      "name": "config-read", "role": "solr:admin",
      "name": "config-edit", "role": "solr:admin",
      "name": "core-admin-read", "role": "solr:admin",
      "name": "core-admin-edit", "role": "solr:admin",
      "name": "collection-admin-read", "role": "solr:admin",      
      "name": "collection-admin-edit", "role": "solr:admin",
      }
    ]
  }
}
